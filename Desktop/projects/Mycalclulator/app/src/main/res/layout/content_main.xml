<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#636c73">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_weight="156.07">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:ems="10"
            android:textColor="@android:color/white"
            android:id="@+id/editTextInput"
            android:layout_alignLeft="@+id/button16"
            android:layout_alignStart="@+id/button16"
            android:layout_above="@+id/button2"
            android:layout_alignRight="@+id/button3"
            android:layout_alignEnd="@+id/button3"
            style="@style/Base.TextAppearance.AppCompat.Display2"
            android:background="#a05f8294"
            android:layout_weight="64.38" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:orientation="vertical"
        android:background="#636c73"
        android:layout_weight="30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".2">

            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="copy"
                android:layout_weight="2"
                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/buttonCopy"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="30dp" />

            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="paste"
                android:layout_weight="3"
                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/buttonPaste"
                android:layout_alignTop="@+id/button"
                android:layout_toRightOf="@+id/button"
                android:layout_toEndOf="@+id/button"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="30dp" />
            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="clear"
                android:layout_weight="2"
                android:background="@drawable/colorbutton1"
                android:textColor="@android:color/white"
                android:id="@+id/buttonClear"
                android:layout_alignTop="@+id/button"
                android:layout_toRightOf="@+id/button"
                android:layout_toEndOf="@+id/button"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="30dp" />

            </LinearLayout>



            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".7">

            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:layout_weight=".4"
                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/button"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/button5"
                android:layout_toStartOf="@+id/button5" />

            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:layout_weight=".4"

                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/button2"
                android:layout_alignTop="@+id/button"
                android:layout_toRightOf="@+id/button"
                android:layout_toEndOf="@+id/button" />

            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:layout_weight=".4"

                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/button3"
                android:layout_alignTop="@+id/button2"
                android:layout_toRightOf="@+id/button2"
                android:layout_toEndOf="@+id/button2" />

            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".4"

                android:text="+"
                android:background="@drawable/colorbutton"
                android:textColor="@android:color/black"
                android:id="@+id/butto13"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/button5"
                android:layout_toStartOf="@+id/button5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".7">
            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:layout_weight=".4"

                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/button4"
                android:layout_below="@+id/button"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2" />


            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/button5"
                android:layout_weight=".4"

                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/button5"
                android:layout_toStartOf="@+id/button5" />

            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/button6"
                android:layout_weight=".4"

                android:layout_alignTop="@+id/button"
                android:layout_toRightOf="@+id/button"
                android:layout_toEndOf="@+id/button" />


            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:background="@drawable/colorbutton"
                android:textColor="@android:color/black"
                android:id="@+id/button14"
                android:layout_weight=".4"

                android:layout_alignTop="@+id/button"
                android:layout_toRightOf="@+id/button"
                android:layout_toEndOf="@+id/button" />

                   </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".7">
            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/button7"
                android:layout_weight=".4"

                android:layout_alignTop="@+id/button2"
                android:layout_toRightOf="@+id/button2"
                android:layout_toEndOf="@+id/button2" />
            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:layout_weight=".4"

                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/button8"
                android:layout_below="@+id/button"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2" />

            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:layout_weight=".4"

                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/button9"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/button5"
                android:layout_toStartOf="@+id/button5" />
            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:layout_weight=".4"

                android:background="@drawable/colorbutton"
                android:textColor="@android:color/black"
                android:id="@+id/button15"
                android:layout_alignTop="@+id/button2"
                android:layout_toRightOf="@+id/button2"
                android:layout_toEndOf="@+id/button2" />

                   </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".6">


            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:layout_weight=".4"

                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/button12"
                android:layout_below="@+id/button"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2" />
            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_weight=".4"

                android:background="@drawable/colorbutton"
                android:textColor="@android:color/white"
                android:id="@+id/button10"
                android:layout_alignTop="@+id/button"
                android:layout_toRightOf="@+id/button"
                android:layout_toEndOf="@+id/button" />

            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:layout_weight=".4"

                android:background="@drawable/colorbutton1"
                android:textColor="@android:color/white"
                android:id="@+id/button11"
                android:layout_alignTop="@+id/button2"
                android:layout_toRightOf="@+id/button2"
                android:layout_toEndOf="@+id/button2" />
            <Button
                style="@style/Base.TextAppearance.AppCompat.Display2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:layout_weight=".6"

                android:background="@drawable/colorbutton"
                android:textColor="@android:color/black"
                android:id="@+id/button16"
                android:layout_below="@+id/button"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>